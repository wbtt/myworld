.portrait {
width:70px;
height:70px;
display:block;
border-radius:50%;
border: 2px #e06b71 solid;
}
.assets{
  width: 81.5%;
  padding: 40px 30px;
  background-color: #fff;
}
.amount{
  float: left;
   box-shadow: 0px 0px 10px #dfdfdf;
   border-radius: 15px;
   width:44%;
   padding: 35px 0;
}
.amount:first-child{
  margin-right: 30px;
  padding: 36px 0;
}
.amount:first-child view{
  padding-right: 5px;
}
.amount view{
padding:0 5px 0 20px;


}
.rmb{
  font-size: 14px;
     text-align: right;
}
.recharge{
  text-align: left;
}
.title{
  width: 90%;
  padding: 5px 0;
  font-size: 17px;
}
.fixd{
  color:#718CC7;
  font-size: 14px;
  position: fixed;
  bottom: 0;
  text-align: center;
  width: 100%;
  height: 25px;
  line-height: 25px;
  background-color: #eeeeee;
}
.nickname{
  color: #fff;
  font-size: 18px;
}
.asset{
  width: 87%;
  color: #fff;
  padding-left:20px;
margin-top:80px;
font-size: 15px;
height: 35px;
}
.content{
  background-color: transparent;
  border: 0;
}
button::after{
  border: 0;
}
.content image{
  width: 25px;
  height: 22px;

}
.tran{
  width: 100%;
}
.time{
  height:20px;
  padding-left:20px;
  padding-right: 10px;
  border-bottom: 2px solid #EBEBEB;
  border-top: 2px solid #EBEBEB;
}
.time view{
  display: inline-block;
}
.year{
  float: left;
}
.choose{
  float: right;
}
.row{
  clear: both;
  width: 93.8%;
  overflow: hidden;
  margin-bottom: 5px;
  padding: 10px;
  background-color: #fff;
}
.row:last-child{
  border-bottom:0;
}
.row view{
  display: inline-block;
}
.rechange{
  width: 50%;
  font-size: 17px;
  line-height:25px;
}
.money{
  width:35%;
