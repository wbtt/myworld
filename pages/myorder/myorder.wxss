/* pages/myorder/myorder.wxss */

.container {
  padding-top: 0;
}

.orderno {
  width: 96%;
  overflow: hidden;
  border-bottom: 1px solid #e1e1e1;
  line-height: 30px;
  font-size: 16px;
}

.goods-info {
  width: 96%;
  overflow: hidden;
  padding: 10px 0;
  display: flex;
}

.goods-img {
  width: 28%;
}

.goods-img image {
  width: 80px;
  height: 80px;
  border: 1px solid #e1e1e1;
}

.name-price-num {
  margin-left: 3%;
  width: 69%;
  overflow: hidden;
  line-height: 26px;
  font-size: 16px;
}

.name {
  overflow: hidden;
}

.total-section {
  width: 100%;
  height: 40px;
  line-height: 40px;
  overflow: hidden;
  border-top: 1px solid #e1e1e1;
  border-bottom: 5px solid #e1e1e1;
  font-size: 14px;
}

.section {
  width: 96%;
  overflow: hidden;
  display: flex;
  margin: 0 auto;
}

.num {
  width: 30%;
  color: #999;
}

.total {
  width: 44%;
  font-family: Helvetica;
  color: #f23030;
}

.action {
  width: 26%;
}
.cart {
  padding: 70px 0 0 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #999;
  width:100%;

}
.header{
  width: 100%;
  background-color: #cf1e25;
  position:  relative;
  height: 40px;
}
.content{
  position: absolute;
  width: 25px;
  height: 22px;
  top:10px;
  right: 10px;
  background-color: transparent;
  border: 0;
}
button::after{
  border: 0;
}
.content image{
  position: absolute;
  width: 25px;
  height: 22px;
  top:0px;
  right: 0px;
}
.goin{
  background-color: #cf1e25;
  color: #fff;
  width: 80%;
  line-height: 2.2;
  font-size: 17px;
  margin-top: 50px;
}
.cart image {
  width: 160px;
  height: 160px;
  margin-bottom: 20px;
}
.cartList {
  width: 96%;
}