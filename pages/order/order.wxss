/* pages/order/order.wxss */

.container {
  padding-top: 0;
}

.user-info {
  width: 96%;
  overflow: hidden;
  padding: 10px 0;
  border-bottom: 1px solid #e1e1e1;
  line-height: 26px;
  display: flex;
}

.add-shipaddress {
  width: 100%;
}

.add-shipaddress button {
  line-height: 2;
  background-color: #cf1e25;
  color:#fff;
}

.show-address {
  width: 70%;
  overflow: hidden;
}

.address {
  overflow: hidden;
  font-size: 14px;
  color: #999;
  line-height:18px;
}

.edit {
  margin-left: 10%;
  width: 20%;
}

.goods-info {
  width: 96%;
  overflow: hidden;
  padding: 10px 0;
  display: flex;
}

.goods-img {
  width: 30%;
}

.goods-img image {
  width: 100%;
  height: 80px;
  border:1px solid #e1e1e1;
}

.name-price-num {
  margin-left: 6%;
  width: 64%;
  overflow: hidden;
  line-height: 26px;
  font-size: 16px;
}

.name {
  overflow: hidden;
}

.price {
  font-family: Helvetica;
  color: #f23030;
}

.num {
  font-size: 14px;
  color: #999;
}

.order-now-fixed {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  text-align: center;
}

.real-payment {
  width: 60%;
  height: 44px;
  line-height: 44px;
  border-top: 1px solid #e1e1e1;
  font-size: 14px;
  color: #cf1e25;
}

.real-payment text {
  font-size: 16px;
  font-weight: bold;
  font-family: Helvetica;
  color: #f23030;
}

.order-now {
  width: 40%;
  height: 45px;
  line-height: 45px;
  background-color: #cf1e25;
  color: #fff;
  border-radius: 0;
}
