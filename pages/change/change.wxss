/* pages/change/change.wxss */
.container {
  padding: 5rpx 20rpx;
  font-size: 14px;
}
input,
.securityCode{
  width: 80%;
  display: inline-block;
  padding: 5px 0;
  vertical-align: middle;
}
.securityCode{
   width: 100%;
  position: relative;
  border-bottom: 0;
}
.code{
  position: absolute;
  top:6px;
  right: 10px;
  color: #CCCCCC;
  border: 1px solid #CCCCCC;
  border-radius:10%; 
  padding: 2px 20px;
}
button{
  background-color: #cf1e25;
  color: #fff;
  width: 95%;
  line-height: 2.2;
  font-size: 18px;
  margin-top: 10px;
}
.icon {
  width: 32px;
  height: 32px;
  margin-right:5px;
  vertical-align: middle;
}
.row {
  clear: left;
  width: 100%;
  overflow: hidden;
  margin-bottom: 5px;
  padding-bottom: 5px;
  border-bottom: 1px solid #eaeaea;
  text-align: left;
}
.myform{
  background: #fff;
  width: 100%;
  height: 100%;
}