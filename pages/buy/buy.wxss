/* pages/sell/sell.wxss */
.container {
  padding-top: 50rpx;
  font-size: 14px;
}
form{
  width: 100%;
}
.row {
  clear: left;
  width: 100%;
  overflow: hidden;
  padding-bottom: 5px;
  text-align: left;
  line-height: 35px;
}
.icon {
  width: 32px;
  height: 32px;
  float: left;
  margin: 0 15px;
}
.detail{
  width: 100%;
  border-bottom: 5px solid #EBF0ED;
}
.row text{
  display: inline-block;
}
text{
  padding-left: 15px;
  line-height: 35px;
}
input{
  border: 1px solid #000;
  display: inline-block;
  width: 60px;
  vertical-align: middle;
  margin-right: 10px;
}
.much{
  font-size: 25px;
  color: #FF0535;
  display: inline-block;
  margin-right: 5px;
  vertical-align: middle;
}
.rmb{
  color: #EFB437;
  margin-right: 10px;
}
button{
  background-color: #CF1E25;
  color:#fff;
  width: 90%;
  line-height: 2;
  margin-top: 10px;
  font-size: 16px;
}

.b1,.b2{position:fixed;width:100%;height:100%;top:0px;background:rgba(0,0,0,0.4);overflow: hidden;z-index:3;
} 
.particulars{
  position: absolute;
  top:20%;
  left: 5%;
  background-color: #fff;
  width: 90%;
  padding: 20rpx 0;
    border-radius: 5px;
}
.minute{
  padding: 0 20px;
  max-height: 270px;
  margin-top: 10px;
  overflow: auto;
}
.header{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  padding: 0 10px;
}
checkbox{
  transform:scale(.7);
}