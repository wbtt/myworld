/* pages/reg/reg.wxss */

page {
  background-color: #fafafa;
  font-family: "微软雅黑";
}

.container {
  padding-top: 0rpx;
}

.logo {
  width: 135px;
  height: 100px;
}

.please {
  width: 315px;
  height: 45px;
}

.input-group {
  margin-top: 20px;
  width: 85%;
  font-size: 12px;
  color: #ccc;
}

.input-row {
  clear: left;
  height: 50px;
  flex-direction: row;
  border-bottom: 1px solid #eaeaea;
  background-color: #fff;
  box-shadow: -1px 0px 5px #d2d2d2;
}

.input-row label, .input-row input {
  height: 50px;
  line-height: 66px;
}

.input-row label {
  width: 15%;
  text-align: center;
  border-right: 1px solid #d2d2d2;
  vertical-align: middle;
  margin-right: 15px;
  /*background: red;*/
}

.input-row input {
  font-size: 14px;
  width: 75%;
  color: #6f6f6f;
  /*background: green;*/
}

.place {
  color: #6f6f6f;
  font-family: "微软雅黑";
}

.forgot-pwd {
  color: #4d4d4d;
  margin-top: 10px;
}

.row {
  height: 35px;
  line-height: 25px;
}

.button-row {
  margin-top: 10px;
}

.button-row button {
  height: 40px;
  line-height: 40px;
  font-size: 17px;
  margin-bottom: 10px;
  border: 0;
  background: #ccc;
  color: #fff;
}

button::after {
  border: 0;
}

.phone_code {
  height: 33px;
  line-height: 33px;
  border: 0;
  border-radius: 20px;
  background: transparent;
  color: #cf1e25;
  width: 23%;
  position: absolute;
  right: 0;
  top: 10px;
  font-size: 14px;
  padding: 0;
}

.button-row button:first-child {
  background: #cf1e25;
}

.pho {
  width: 25px;
  height: 28px;
}

.mima {
  width: 20px;
  height: 20px;
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
  background: #ccc;
}

.reg_logo {
  width: 80%;
  height: 160px;
  margin-top: 5px;
}
.eye{
  width: 50px;
  height:50px;
}
checkbox{
  transform:scale(.7);
}
.b1{position:fixed;width:100%;height:100%;top:0px;background:rgba(0,0,0,0.4);overflow: hidden;z-index:2;
} 
.particulars{
  position: absolute;
  top:20%;
  left: 5%;
  background-color: #fff;
  width: 90%;
  padding: 20rpx 0;
    border-radius: 5px;
}
.minute{
  padding: 0 20px;
  max-height: 270px;
  margin-top: 10px;
  overflow: auto;
  font-size: 15px;
}
.header{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  padding: 0 10px;
}