/* pages/user/user.wxss */
page{
  position: relative;
}
.container {
  padding-top: 0rpx;
   padding-bottom: 0rpx;
  font-size: 14px;
}

.user {
  width: 100%;
  overflow: hidden;
  background-color: #cf1e25;
  padding:40rpx 0;
}
.contast{
  width: 100%;
  padding: 60rpx 0;
  background-color: #fafafa;
  margin-bottom: 60rpx;
}
.row {
  border-radius:5px;
  line-height:70rpx; 
  clear: left;
  width: 80%;
  overflow: hidden;
  padding: 10rpx 0;
  border: 1px solid #eaeaea;
  margin: 0 auto;
  box-shadow: 0rpx 0rpx 10rpx #dfdfdf;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.row:last-child{
   margin-bottom: 0px;
}
.flex-item-4 {
  float: left;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  margin-right: 40rpx;
  padding: 10rpx 0;
}
.flex-item-6 {
  float: left;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  margin-left: -2rpx;
}

.row .flex-item-4:first-child {
  border-right: 1px solid #eaeaea;
   
}

.user-portrait {
  margin-left: 40rpx;
  width: 30%;
  overflow: hidden;
}

.portrait {
  width: 140rpx;
  height: 140rpx;
  display: block;
  border-radius: 50%;
border:2px #e06b71 solid;

}

.user-info {
  padding-left: 10rpx;
}

.nickname {
  font-size: 15px;
  display: block;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  color: #fff;
}

.approve {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1px solid rgb(255, 255,255);
  border-radius: 5px;
  color: rgb(255, 255,255);
  font-size: 12px;
}

.approve-pass {
  border: 1px solid #fff;
  color: #fff;
}

.check-in {
  top: 10rpx;
  right: 20rpx;
  width: 170rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  color: #000;
}


.icon {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin:0 40rpx;
  vertical-align: middle;
}

.setting{
  right:60rpx;
  top:74rpx;
  line-height: 64rpx;
}
.setting image{
  margin: 0;
}
button,
button::after ,
button[plain]{
  padding: 0;
  border: 0;
  font-size:14px;
  text-align: left;
  color:#000;
}
.circle{
  width:16rpx;
  height:16rpx;
  background-color: red;
  position: absolute;
  top:25%;
  right:35%;
  border-radius:50%; 
}
.none{
  display: none;
}
.block{
  display: block;
}
.right{
  width: 64rpx;
  height: 60rpx;
  vertical-align: middle;
  float:right;
  text-align: center;
}
.bq{
  font-size: 12px;
  text-align: center;
  position: absolute;
  width: 100%;
   background-color: #fafafa;
}