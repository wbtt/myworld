/* pages/login/login.wxss */
page{
  background-color: #fafafa;
  font-family:"微软雅黑";
}
.container {
  padding-top: 100rpx;
}

.logo {
  width: 135px;
  height: 120px;
}

.title {
  display: block;
  white-space: nowrap;
  font-size: 14px;
  font-style: normal;
  text-align: center;
  color: rgba(177, 161, 159, 1);
}

.input-group {
  margin-top: 20px;
  width: 80%;
  font-size: 12px;
  color: #cccccc;
}

.input-row {
  background-color: #fff;
  clear: left;
  height: 50px;
  flex-direction: row;
   box-shadow: -1px 0px 5px #d2d2d2;
   border-radius: 5px;
}
.input-row:first-child{
  margin-bottom: 10px;
}
.input-row label, .input-row input {
  height: 49px;
  line-height: 66px;
}

.input-row label {
  width: 15%;
  text-align:center;
  border-right:1px solid #d2d2d2;
  vertical-align: middle;
  /*background: red;*/
}

.input-row input {
  font-size: 17px;
  width: 80%;
  color: #6f6f6f;
  /*background: green;*/
}

.forgot-pwd {
  color: #4d4d4d;
}

.button-row {
  margin-top: 20px;
}

.button-row button {
  height: 40px;
  line-height: 40px;
  font-size: 17px;
  margin-bottom: 20px;
  border: 0;
  background: #ccc;
  color: #fff;
}

.button-row button:first-child {
  background: #cf1e25;
}
.bq{
  font-size: 12px;
  text-align: center;
  position: absolute;
  width: 100%;
}
.please{
  width: 260px;
  height: 20px;
}
.pho{
  width: 25px;
  height: 28px;
}
.mima{
  width: 20px;
  height: 20px;
}
.holder{
   font-family:"微软雅黑";
   color: #6f6f6f;
}
.eye{
  width: 45px;
  height:50px;
}
.prompt{
  margin-top: 30rpx;
}