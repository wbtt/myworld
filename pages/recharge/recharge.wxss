/* pages/recharge/recharge.wxss */

page {
  font-family: "微软雅黑";
}

.container {
  padding-top: 10rpx;
}

.input-group {
  width: 90%;
}

.amount {
  font-size: 14px;
  box-shadow: -1px -1px 10px #d2d2d2;
  margin-bottom: 10px;
  border-radius: 5px;
}

.amount1 {
  font-size: 14px;
  box-shadow: -1px -1px 10px #d2d2d2;
  border-radius: 5px;
}

input {
  display: inline-block;
  width: 120px;
  vertical-align: middle;
  font-size: 14px;
  padding: 11px 20px;
  line-height: 1.5rem;
}

button {
  background-color: #cf1e25;
  color: #fff;
  margin: 10px 15px;
  line-height: 2;
}

.button-hover {
  background-color: #cf1e25;
  color: #fff;
}

image {
  width: 91px;
  height: 32px;
  vertical-align: middle;
}

label {
  line-height: 45px;
}

radio-group {
  width: 62%;
  display: inline-block;
  padding:2px 0 2px 10px;
}

.recharge {
  display: inline-block;
  border-right: 1px solid #d2d2d2;
  padding: 15px 20px;
}

radio {
  margin: 0 15px;
  transform: scale(0.7);
  float: right;
}

.icon {
  width: 32px;
  height: 32px;
  margin-right: 5px;
}

.pay text {
  vertical-align: middle;
}

.rech {
  font-size: 15px;
}

.title {
  font-size: 14px;
  color: #808080;
  margin-top: 10px;
  text-align: center;
}