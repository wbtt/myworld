/* pages/cart/cart.wxss */
.container {
  padding-top: 1px;
  margin-bottom: 50px;
}
.cart {
  padding: 70px 0 0 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #999;
  width:100%;

}

.cartList {
  width: 100%;
}

.cart image {
  width: 160px;
  height: 160px;
  margin-bottom: 20px;
}

.baoyou {
  font-size: 18px;
  color: #db2929;
  padding: 10px;
}

.goods {
  background: #fff;
  border-top: 5px solid #eee;
  margin-bottom: 10px;
  padding: 10px 10px 0 10px;
  display: flex;
}
.goods:first-child{
  border-top: 0;
}
.goods image {
  width: 80px;
  height: 80px;
  border: 1px solid #ddd;
}

.goods .good-cont {
  display: flex;
  flex: 1;
  flex-direction: column;
  color: #555;
  font-size: 14px;
  padding:0 5px;
  overflow: hidden;
}

.goods .good-cont .goods-navigator {
  display: flex;
  flex: 2;
}

.goods .good-cont .good-price {
  display: flex;
  flex-direction: column;
  flex: 3;
}

.goods .good-cont .good-price .price {
  font-size: 16px;
  color: #ec5151;
  font-family:Helvetica;
}

.goods .good-cont .good-price .btn-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.stepper {
  width: 100px;
  height: 26px;
  border: 1px solid #ccc;
  border-radius: 3px;
}

.stepper text {
  width: 29px;
  line-height: 26px;
  text-align: center;
  float: left;
}

.stepper input {
  width: 40px;
  height: 26px;
  min-height: 0;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

.stepper .normal {
  color: black;
}

.stepper .disabled {
  color: #ccc;
}

.goods .good-cont .good-price .btn-box image {
  width: 23px;
  height: 23px;
  border: 0;
  margin: 0;
}

