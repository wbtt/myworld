.total {
  position: fixed;
  bottom: 0;
  height: 45px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width:100%;
  text-align:center;
}

.total .total_text {
  width: 50%;
  line-height: 40px;
  color: #777;
  font-size:16px;
}

.total .total_text text {
  color: #cf1e25;
  font-family:"微软雅黑";
}

.total_btn {
  width: 50%;
}

.total .total_js {
  font-family:"微软雅黑";
  color: #fff;
  background: #cf1e25;
  height:100%;
  margin: 0;
  border-radius:0;
  font-size: 18px;
  line-height: 2.5;
}
.goin{
  background-color: #cf1e25;
  color: #fff;
  width: 80%;
  line-height: 2.2;
  font-size: 17px;
  margin-top: 50px;
}
.header{
  width: 100%;
  background-color: #cf1e25;
  position:  relative;
  height: 40px;
}
.content{
  position: absolute;
  width: 25px;
  height: 22px;
  top:10px;
  right: 10px;
  background-color: transparent;
  border: 0;
}
button::after{
  border: 0;
}
.content image{
  position: absolute;
  width: 25px;
  height: 22px;
  top:0px;
  right: 0px;
}